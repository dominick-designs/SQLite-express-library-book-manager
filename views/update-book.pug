extends layout.pug

block content
        h2 Update Book Form

        if(errors)
            h2.errors Ooops an error occured!
            ul.errors
                each error in errors
                    li
                        =error.message


        form(method='POST' action="/books/" + id + "?_method=PUT" )
            <input type="hidden" name="_method" value="PUT">

            p
                label(for="title") Title
                input#title(name="title" type="text" value=title)
            p
                label(for="author") Author
                input#author(name="author" type="text" value=author)
            p
                label(for="genre") Genre
                input#genre(name="genre" type="text" value=genre)
            p
                label(for="year") Year
                input#year(name="year" type="text" value=year)
            p
                input(type="submit" value="Update Book")
            
        form(method="POST" action="/books/" + id + "/delete/?_method=DELETE" onsubmit="return confirm('Do you really want to delete this book?');")
            <input type="hidden" name="_method" value="DELETE">
            p
                a.button(href="/books") Cancel
            p
                input(type="submit" value="Delete Book")